<section class="admin-products-index">

  <header class="page-header">
    <h1>Admin &raquo; Dashboard</h1>
  </header>

  <div class="well">
    <%= link_to 'All Products', [:admin, :products], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default products">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Table</th>
          <th>Number of records</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Product</td>
          <td>
            <%= @products.count %>
          </td>
        </tr>
        <tr>
          <td>Category</td>
          <td>
            <%= @categories.count %>
          </td>
        </tr>
      </tbody>
    </table>

  </div>

</section>

